{
  "manifestVersion": 1,
  "id": "rm-templates-extensions",
  "version": "0.1.0",
  "name": "RM Templates Package - 1",
  "description": "Adds more environment templates to RM",
  "publisher": "ms-devlabs",
  "public":  true,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
   "screenshots": [
    {
      "path": "images/screen1.png"
    }
  ],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "icons": {
    "default": "images\\vss_default.png"
  },
  "contributions": [
    {
       "id": "sample-template",
       "type": "ms.vss-environmenttemplate.environment-template",
       "targets": [ "ms.vss-environmenttemplate.environment-templates" ],
       "properties": {
            "id": "682dd05d-0163-4ba9-8a81-91a13906435e",
            "name": "Sample: Azure service deployment with load test",
            "description": "Environment template extension that lets you deploy Azure App Servie and run a cloud based test.",
            "variables": {
                "AdministratorLogin": {
                    "value": null
                },
                "AdministratorLoginPassword": {
                    "value": "",
                    "isSecret": true
                },
                "DatabaseName": {
                    "value": null
                },
                "ServerName": {
                    "value": null
                },
                "ConnectionStringName": {
                    "value": null
                },
                "ReleasePlatform": {
                    "value": "Any CPU"
                },
                "ReleaseConfiguration": {
                    "value": "Release"
                }
            },
            "deployPhases": [
            {
                "rank": 1,
                "phaseType": "agentBasedDeployment",
                "name": "Run on agent",
                "workflowTasks": [
                {
                    "taskId": "497d490f-eea7-4f2b-ab94-48d9c1acdcb1",
                    "version": "2.*",
                    "name": "Deploy Azure App Service",
                    "enabled": true,
                    "alwaysRun": false,
                    "continueOnError": false,
                    "timeoutInMinutes": 0,
                    "definitionType": null,
                    "inputs": {
                        "ConnectedServiceName": "",
                        "WebAppName": "",
                        "DeployToSlotFlag": "false",
                        "ResourceGroupName": "",
                        "Package": "$(System.DefaultWorkingDirectory)\\**\\*.zip",
                        "WebAppUri": "",
                        "UseWebDeploy": "true",
                        "SetParametersFile": "",
                        "RemoveAdditionalFilesFlag": "false",
                        "ExcludeFilesFromAppDataFlag": "false",
                        "TakeAppOfflineFlag": "false",
                        "AdditionalArguments": ""
                    }
                },
                {
                    "taskId": "9648625c-1523-4eb5-b015-dfe7c685840c",
                    "version": "1.*",
                    "name": "Quick Web Performance Test",
                    "enabled": true,
                    "alwaysRun": false,
                    "continueOnError": false,
                    "timeoutInMinutes": 0,
                    "definitionType": null,
                    "inputs": {
                        "ConnectedServiceName": "",
                        "websiteUrl": "",
                        "testName": "LoadTest",
                        "vuLoad": "25",
                        "runDuration": "60",
                        "geoLocation": "Default",
                        "machineType": "0"
                    }
                }
                ]
            }],
            "icon": "images/azureicon.png"
        }
    }
  ],
  "files": [
    {
      "path": "images\\azureicon.png",
      "addressable": true 
    }
  ]
}
