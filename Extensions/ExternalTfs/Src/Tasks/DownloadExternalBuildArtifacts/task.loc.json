{
  "id": "B099689B-039E-4450-8658-C72E3895DD3F",
  "name": "DownloadExternalBuildArtifacts",
  "friendlyName": "ms-resource:loc.friendlyName",
  "description": "ms-resource:loc.description",
  "helpMarkDown": "ms-resource:loc.helpMarkDown",
  "category": "Utility",
  "author": "ms-vscs-rm",
  "version": {
    "Major": 16,
    "Minor": 264,
    "Patch": 1
  },
  "demands": [],
  "minimumAgentVersion": "2.144.0",
  "inputs": [
    {
      "name": "connectionType",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.connectionType",
      "defaultValue": "reposOrTfs",
      "required": true,
      "options": {
        "reposOrTfs": "Azure Repos/Team Foundation Server",
        "ado": "Azure DevOps (in preview)"
      },
      "helpMarkDown": "ms-resource:loc.input.help.connectionType"
    },
    {
      "name": "connection",
      "type": "connectedService:externaltfs",
      "label": "ms-resource:loc.input.label.connection",
      "required": true,
      "defaultValue": "",
      "helpMarkDown": "ms-resource:loc.input.help.connection",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "azureDevOpsServiceConnection",
      "type": "connectedService:workloadidentityuser",
      "label": "ms-resource:loc.input.label.azureDevOpsServiceConnection",
      "required": true,
      "defaultValue": "",
      "helpMarkDown": "ms-resource:loc.input.help.azureDevOpsServiceConnection",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "project",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.project",
      "defaultValue": "$(System.TeamProjectId)",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.project",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "definition",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.definition",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.definition",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "version",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.version",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.version",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "projectAdo",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.project",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.project",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "buildDefinitionAdo",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.definition",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.definition",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "versionAdo",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.version",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.version",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "itemPattern",
      "type": "string",
      "label": "ms-resource:loc.input.label.itemPattern",
      "defaultValue": "**",
      "required": false,
      "helpMarkDown": "ms-resource:loc.input.help.itemPattern"
    },
    {
      "name": "downloadPath",
      "type": "string",
      "label": "ms-resource:loc.input.label.downloadPath",
      "defaultValue": "$(System.ArtifactsDirectory)",
      "required": true,
      "helpMarkDown": "ms-resource:loc.input.help.downloadPath"
    }
  ],
  "dataSourceBindings": [
    {
      "endpointId": "$(connection)",
      "target": "project",
      "dataSourceName": "Projects",
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(connection)",
      "target": "definition",
      "dataSourceName": "Definitions",
      "parameters": {
        "project": "$(project)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(connection)",
      "target": "version",
      "dataSourceName": "Builds",
      "parameters": {
        "project": "$(project)",
        "definition": "$(definition)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{buildNumber}}}\" }"
    },
    {
      "endpointId": "$(azureDevOpsServiceConnection)",
      "target": "projectAdo",
      "dataSourceName": "Projects",
      "parameters": {
        "top": 1000
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(azureDevOpsServiceConnection)",
      "target": "buildDefinitionAdo",
      "dataSourceName": "Definitions",
      "parameters": {
        "project": "$(projectAdo)",
        "top": 500
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(azureDevOpsServiceConnection)",
      "target": "versionAdo",
      "dataSourceName": "Builds",
      "parameters": {
        "project": "$(projectAdo)",
        "definition": "$(buildDefinitionAdo)",
        "top": 100
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{buildNumber}}}\" }"
    }
  ],
  "instanceNameFormat": "ms-resource:loc.instanceNameFormat",
  "execution": {
    "Node16": {
      "target": "download.js",
      "argumentFormat": ""
    },
    "Node20_1": {
      "target": "download.js",
      "argumentFormat": ""
    }
  },
  "messages": {
    "DownloadArtifacts": "Downloading artifacts from : %s",
    "ArtifactsSuccessfullyDownloaded": "Successfully downloaded artifacts to %s",
    "UnsupportedArtifactType": "Unsupported artifact type: %s"
  }
}
