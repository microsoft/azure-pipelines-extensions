{
  "id": "B099689B-039E-4450-8658-C72E3895DD3F",
  "name": "DownloadExternalBuildArtifacts",
  "friendlyName": "Download Artifacts - External Build",
  "description": "Download artifacts from VSTS\\TFS build",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "ms-vscs-rm",
  "version": {
    "Major": 16,
    "Minor": 271,
    "Patch": 0
  },
  "demands": [],
  "minimumAgentVersion": "2.144.0",
  "inputs": [
    {
      "name": "connectionType",
      "type": "pickList",
      "label": "Service Connection Type",
      "defaultValue": "reposOrTfs",
      "required": true,
      "options": {
        "reposOrTfs": "Azure Repos/Team Foundation Server",
        "ado": "Azure DevOps (in preview)"
      },
      "helpMarkDown": "Select which service connection type to use for artifact discovery and download."
    },
    {
      "name": "connection",
      "type": "connectedService:externaltfs",
      "label": "Azure Repos/Team Foundation Server service connection",
      "required": true,
      "defaultValue": "",
      "helpMarkDown": "Select Azure Repos/Team Foundation Server service connection",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "azureDevOpsServiceConnection",
      "type": "connectedService:workloadidentityuser",
      "label": "Azure DevOps service connection",
      "required": true,
      "defaultValue": "",
      "helpMarkDown": "Select Azure DevOps service connection (in preview)",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "project",
      "type": "pickList",
      "label": "Project",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the project name",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "definition",
      "type": "pickList",
      "label": "Build Definition",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the build definition",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "version",
      "type": "pickList",
      "label": "Build",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the build number",
      "visibleRule": "connectionType = reposOrTfs"
    },
    {
      "name": "projectAdo",
      "type": "pickList",
      "label": "Project",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the Azure DevOps project",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "buildDefinitionAdo",
      "type": "pickList",
      "label": "Build definition",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the build definition",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "versionAdo",
      "type": "pickList",
      "label": "Build",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the build number",
      "visibleRule": "connectionType = ado"
    },
    {
      "name": "itemPattern",
      "type": "string",
      "label": "Item Pattern",
      "defaultValue": "**",
      "required": false,
      "helpMarkDown": "Minimatch pattern to filter files to be downloaded. To download all files within artifact drop use drop/**"
    },
    {
      "name": "downloadPath",
      "type": "string",
      "label": "Destination Directory",
      "defaultValue": "$(System.ArtifactsDirectory)",
      "required": true,
      "helpMarkDown": "Path on the agent machine where the artifact will be downloaded"
    }
  ],
  "dataSourceBindings": [
    {
      "endpointId": "$(connection)",
      "target": "project",
      "dataSourceName": "Projects",
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(connection)",
      "target": "definition",
      "dataSourceName": "Definitions",
      "parameters": {
          "project": "$(project)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(connection)",
      "target": "version",
      "dataSourceName": "Builds",
      "parameters": {
          "project": "$(project)",
          "definition": "$(definition)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{buildNumber}}}\" }"
    },
    {
      "endpointId": "$(azureDevOpsServiceConnection)",
      "target": "projectAdo",
      "dataSourceName": "Projects",
      "parameters": {
        "top": 1000
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(azureDevOpsServiceConnection)",
      "target": "buildDefinitionAdo",
      "dataSourceName": "Definitions",
      "parameters": {
          "project": "$(projectAdo)",
          "top": 500
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "$(azureDevOpsServiceConnection)",
      "target": "versionAdo",
      "dataSourceName": "Builds",
      "parameters": {
          "project": "$(projectAdo)",
          "definition": "$(buildDefinitionAdo)",
          "top": 100
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{buildNumber}}}\" }"
    }
  ],
  "instanceNameFormat": "Download Artifacts - External Build",
  "execution": {
    "Node16": {
      "target": "download.js",
      "argumentFormat": ""
    },
    "Node20_1": {
      "target": "download.js",
      "argumentFormat": ""
    }
  },
  "messages": {
    "DownloadArtifacts": "Downloading artifacts from : %s",
    "ArtifactsSuccessfullyDownloaded": "Successfully downloaded artifacts to %s",
    "UnsupportedArtifactType": "Unsupported artifact type: %s"
  }
}
