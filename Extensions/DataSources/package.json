{
  "name": "datasources",
  "version": "1.100.0",
  "description": "Extension for Service endpoints datasources",
  "keywords": [
    "extensions",
    "Azure DevOps",
    "Visual Studio Team Services"
  ],
  "scripts": {
    "clean": "rimraf ./target",
    "compile": "npm run clean && webpack --mode production",
    "compile:dev": "npm run clean && webpack --mode development",
    "build": "npm run compile",
    "build:dev": "npm run compile:dev && npm run postbuild",
    "postbuild": "npm run package-extension -- --rev-version",
    "package-extension": "tfx extension create --manifest-globs azure-devops-extension.json src/**/*.json --output-path _package/DataSources",
    "publish-extension": "tfx extension publish --manifest-globs azure-devops-extension.json src/**/*.json"
  },
  "dependencies": {
    "azure-devops-extension-api": "~1.158.0",
    "azure-devops-extension-sdk": "~2.0.11",
    "azure-devops-ui": "~2.167.31",
    "react": "~18.1.0",
    "react-dom": "~18.1.0",
    "reflux": "^6.4.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "@types/react": "~18.0.9",
    "@types/react-dom": "~18.0.3",
    "base64-inline-loader": "^2.0.1",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "~6.7.1",
    "file-loader": "~6.2.0",
    "node-sass": "~7.0.1",
    "rimraf": "~3.0.2",
    "sass-loader": "~12.6.0",
    "style-loader": "~3.3.1",
    "tfx-cli": "^0.11.0",
    "ts-loader": "~9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
