{
    "compilerOptions": {
        "charset": "utf8",
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitThis": true,
        "strict": true,
        "target": "es6",
        "rootDir": "src/",
        "outDir": "dist/",
        "jsx": "react",
        "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.promise"
        ],
        "types": [
            "react"
        ]
    }
}