index=nodeus
| eval esize=len(_raw)
| eventstats sum(esize) as totalSize
| stats count sum(esize) as size perc95(esize) as perc95 avg(esize) as avg first(totalSize) as totalSize by event
| sort - size
| eval size = round(size/1024/1024, 2)
| eval totalSize = round(totalSize/1024/1024, 2)
| eval percent = size / totalSize
| eval perc95 = round(perc95/1024, 2)
| eval avg = round(avg/1024, 2)
| rename size as "Total Size in MB"
| rename perc95 as "Event Size Perc95 in KB"
| rename avg as "Event Size Avg in KB"